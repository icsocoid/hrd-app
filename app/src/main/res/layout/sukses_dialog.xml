<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:src="@mipmap/ic_success"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/header_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terima Kasih"
        android:textSize="28.8sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/body_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data berhasil di submit."
        android:textColor="#111111"
        android:layout_gravity="center"
        android:textSize="12.5sp"
        android:layout_marginTop="11.5sp"/>
    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="OK"
        android:paddingHorizontal="50dp"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/red_rect"/>



</LinearLayout>